{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "module": "esnext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@art-catalogue/env/*": [
                "apps/art-catalogue/src/environments/*"
            ],
            "@web-devops-workshop/api-interfaces": [
                "libs/api-interfaces/src/index.ts"
            ],
            "@web-devops-workshop/decorators": [
                "libs/decorators/src/index.ts"
            ]
        },
        "rootDir": "."
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
